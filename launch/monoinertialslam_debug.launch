<launch>

  <node launch-prefix="xterm -e gdb --args" pkg="rtslamros" type="monoinertial_node" name="rtslam" clear_params="true" output="screen">

    <!-- Camera topic to subscribe to -->
    <param name="cam_topic" value="/camera1/image" type="str" />

    <!-- Imu topic to subscribe to -->
    <param name="imu_topic" value="/imu/data" type="str" />
    
    <!-- Camera calibration file -->
    <!-- <rosparam file="$(find rtslamros)/param/camera1.yaml" /> -->

    <!-- Default parameter settings: choose between vo_fast and vo_accurate -->
    <rosparam file="$(find rtslamros)/param/rtslam.yaml" />
    <rosparam file="$(find rtslamros)/param/setup.yaml" />
        
    <!-- Set 'use_sim_time' when running from bags -->
    <param name="use_sim_time" type="bool" value="true" />

    <!-- Initial camera orientation, make it point downwards -->
    <!-- <param name="init_rx" value="3.14" /> -->
    <!-- <param name="init_ry" value="0.00" /> -->
    <!-- <param name="init_rz" value="0.00" /> -->

  </node>

</launch>
